{% if inventory_hostname in groups['nova_compute'] and (nova_virt_type | default('qemu') in ['kvm', 'qemu']) %}
# Plugin to check the availability of libvirt.
# The hypervisor connection URI default is 'qemu:///system'
<LoadPlugin python>
  Globals true
</LoadPlugin>

<Plugin "python">
  ModulePath "{{ collectd_plugins_dir }}/collectd-modules"
  LogTraces false
  Interactive false

  Import "collectd_libvirt_check"

  <Module "collectd_libvirt_check">
    Connection "qemu:///system"
  </Module>
</Plugin>
{% endif %}
