{% if inventory_hostname in groups['nova_compute'] %}
# Plugin to check the availability of libvirt.
# The hypervisor connection URI default is 'qemu:///system'
<LoadPlugin python>
  Globals true
</LoadPlugin>

<Plugin "python">
  ModulePath "{{ collectd_plugins_dir }}/collectd-modules"
  ModulePath "/usr/lib/python2.7/dist-packages"
  LogTraces false
  Interactive false

  Import "collectd_libvirt_check"

  <Module "check_openstack_api">
    Connection "qemu:///system"
  </Module>
</Plugin>
{% endif %}
