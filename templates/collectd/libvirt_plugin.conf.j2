{% if inventory_hostname in groups['nova_compute'] %}
# Plugin to check the availability of libvirt.
# The hypervisor connection URI default is 'qemu:///system'
<LoadPlugin virt>
  Globals false
</LoadPlugin>

<Plugin virt>
  Connection "qemu:///system"
  RefreshInterval 60
  HostnameFormat "uuid"
  #Domain "dom0"
  # BlockDevice "name:device"
  #InterfaceDevice "name:interface"
  #IgnoreSelected true
</Plugin>
{% endif %}
