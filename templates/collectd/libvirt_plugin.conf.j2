{%- if inventory_hostname in groups['collectd'] or
      (inventory_hostname in groups['nova_compute'] and
      (nova_virt_type | default('qemu') in ['kvm', 'qemu'])) %}

# Plugin to check the availability of libvirt.
# The hypervisor connection URI default is 'qemu:///system'
<LoadPlugin virt>
  Globals false
</LoadPlugin>

<Plugin virt>
  Connection "qemu:///system"
  RefreshInterval 60
  HostnameFormat "hostname"
  PluginInstanceFormat "uuid"
  Instances {{ collectd_readthreads }}
  ExtraStats "cpu_util" "disk" "disk_err" "vcpupin"
</Plugin>
{%- endif %}
