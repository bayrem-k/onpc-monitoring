# Plugin to check the availability of libvirt.
# The hypervisor connection URI default is 'qemu:///system'

{% if 'nova_compute' in group_names %}
<LoadPlugin python>
  Globals true
</LoadPlugin>

<Plugin "python">
  ModulePath "{{ collectd_plugins_dir }}"
  LogTraces false
  Interactive false

  Import "collectd_libvirt_check"

  <Module "check_openstack_api">
    Connection "qemu:///system"
  </Module>
</Plugin>

<LoadPlugin libvirt>
  Globals false
</LoadPlugin>

<Plugin libvirt>
  Connection "qemu:///system"
  RefreshInterval 60
  HostnameFormat "uuid"
</Plugin>

{% endif %}